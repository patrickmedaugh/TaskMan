<%= link_to "All Lists", lists_path %>
<h1><%= @list.title %></h1>
<%= link_to "Edit List", edit_list_path(@list) %>
<%= link_to "Delete List", list_path(@list), method: :delete %>
<h3><%= @list.description %></h3>
<input id="search-<%=@list.id%>"></input><button id="search-button-<%=@list.id%>">Search</button>
<button id="title-sort-<%=@list.id%>" class="title-sort" data="<%=@list.id%>">Title</button>
<button id="status-sort-<%=@list.id%>" class="status-sort" data="<%=@list.id%>">Status</button>
<button id="due-date-sort-<%=@list.id%>" class="due-date-sort" data="<%=@list.id%>">Due Date</button>
<div id="tasks-<%=@list.id%>">
  <% @list.tasks.each do |task| %>
    <li>
      <p><%=task.title %></p>
      <p><%= task.notes %></p>
      <p><%= task.start_date %></p>
      <p><%= task.due_date %></p>
      <p><%= task.status %></p>
      <button id="complete-task-<%=task.id%>">Complete Task</button>
      <button id="incomplete-task-<%=task.id%>">Incomplete Task</button>
    </li>
  <% end %>
</div>
    <p><%= link_to "Add Task", new_list_task_path(@list.id) %></p>

